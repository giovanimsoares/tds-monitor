{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "outDir": "../out",
        "lib": [
            "es6",
            "dom"
        ],
        "jsx": "react",
        "sourceMap": true,
        "mapRoot": "../out",
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "_lixo"
    ]
}
